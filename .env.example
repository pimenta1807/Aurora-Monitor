# Discord Bot Token (required) - Get from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Discord Channel ID where alerts will be sent (required)
# Right-click on channel -> Copy ID (enable Developer Mode in Discord settings)
DISCORD_CHANNEL_ID=1234567890123456789

# Ping targets - separate multiple IPs/domains with semicolons
PING_TARGETS=8.8.8.8;1.1.1.1;google.com

# Ping interval in seconds (default: 5)
PING_INTERVAL=5

# Number of retry attempts before considering target failed (default: 3)
RETRY_ATTEMPTS=3

# Anomaly detection threshold percentage (default: 30)
# Alert if latency increases by this percentage above average
ANOMALY_THRESHOLD=30

# Number of consecutive anomalies before alerting (default: 5)
ANOMALY_COUNT=5

# Percentage of failed targets to trigger critical alert (default: 50)
FAILURE_PERCENTAGE=50
